package Games;

public class Indoor
{
    String name;
    int age;
    int team;

    // Constructor based on the handwritten notes: public Indoor(String s, int a)
    public Indoor(String s, int a)
    {
        name = s;
        age = a;
        team = 11; // Hardcoded team value from the notes
    }

    public void display()
    {
        // In Indoor games player details are as follows:
        System.out.println("In Indoor games player details are as follows:");
        System.out.println("Name: " + name + " | Age: " + age + " | Team: " + team);
    }
}
package Games;

public class Outdoor
{
    String name;
    int age;
    int team;
    String size;

    public Outdoor(String s, int a, int t)
    {
        name = s;
        age = a;
        team = t;
        size = "XL"; // Default size, assuming 'size' might be used for something else as it's not initialized in the constructor arguments.
    }

    public void display()
    {
        // In outdoor games player details are as follows:
        System.out.println("In outdoor games player details are as follows:");
        System.out.println("Name: " + name + " | Age: " + age + " | Team: " + team + " | Size: " + size);
    }
}
